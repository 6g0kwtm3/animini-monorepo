{
	"$schema": "../../node_modules/oxlint/configuration_schema.json",
	"categories": { "suspicious": "error" },
	"plugins": [
		"react",
		"unicorn",
		"typescript",
		"oxc",
		"import",
		"jsx-a11y",
		"react-perf",
		"vitest"
	],
	"env": { "node": true, "browser": true },
	"rules": {
		"oxc/no-barrel-file": "error",
		"import/no-cycle": "error",
		"react/jsx-no-useless-fragment": "warn",
		"react/rules-of-hooks": "error",
		"react/exhaustive-deps": "error",
		"typescript/no-non-null-assertion": "warn",
		"typescript/no-unnecessary-type-constraint": "error",
		"react/react-in-jsx-scope": "off",
		"eslint/require-await": "error",
		"unicorn/no-document-cookie": "off",
		"jsx-a11y/no-autofocus": "off",
		"jsx-a11y/anchor-has-content": [
			"warn",
			{
				"components": [
					"Link",
					"NavLink",
					"HashNavLink",
					"NavigationItem",
					"Button",
					"Icon"
				]
			}
		],
		"jsx-a11y/anchor-is-valid": [
			"warn",
			{
				"components": ["Link", "NavLink", "HashNavLink", "NavigationItem", "A"],
				"specialLink": ["to", "href"]
			}
		]
	},
	"settings": {
		"react": {
			"version": "19",
			"linkComponents": [
				{ "name": "Link", "attribute": "to" },
				{ "name": "NavLink", "attribute": "to" },
				{ "name": "HashNavLink", "attribute": "to" },
				{ "name": "NavigationItem", "attribute": "to" },
				{ "name": "A", "attribute": "href" }
			],
			"formComponents": ["Form"],
			"buttonComponents": ["Button", "BaseButton", "Icon"]
		},
		"jsx-a11y": {
			"components": {
				"Link": "a",
				"NavLink": "a",
				"HashNavLink": "a",
				"A": "a"
			}
		}
	}
}
