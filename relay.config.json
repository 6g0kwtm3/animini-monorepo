{
	"src": "./app",
	"language": "typescript",
	"schema": "./schema.graphql",
	"eagerEsModules": true,
	"artifactDirectory": "./app/gql",
	"excludes": ["**/node_modules/**", "**/__mocks__/**", "**/__generated__/**"],
	"featureFlags": {
		"enable_relay_resolver_transform": true,
		"enable_fragment_aliases": { "kind": "enabled" }
	},
	"requireCustomScalarTypes": true,
	"useImportTypeSyntax": true,
	"customScalarTypes": {
		"FuzzyDateInt": "number",
		"Json": { "name": "JSONValue", "path": "./app/lib/urql" },
		"CountryCode": { "name": "CountryCode", "path": "./app/lib/urql" }
	}
}
