{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build", "relay", "build:root"],
			"outputs": ["build/**", "dist/**", "etc/**", "storybook-static/**"]
		},
		"//#build:root": {
			"inputs": ["packages/*/src/**"],
			"cache": false
		},
		"router": {
			"outputs": [".react-router/**"]
		},
		"relay": { "outputs": ["app/gql/**"] },
		"relay-watch": { "cache": false, "persistent": true },
		"paraglide": {
			"outputs": ["app/paraglide/**"],
			"inputs": ["messages/**", "project.inlang/settings.json"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		},
		"check": { "dependsOn": ["transit", "router", "paraglide", "relay"] },
		"//#oxlint": {},
		"//#lint": {},
		"//#format": {}
	}
}
