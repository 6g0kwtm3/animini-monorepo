{
	"workspaces": {
		"apps/storybook": {
			"entry": ["env.ts", ".storybook/modes.ts"],
			"ignoreDependencies": ["oxlint-config"]
		},
		"apps/web": {
			"paths": { "~icons/*": ["node_modules/unplugin-icons/types/react.d.ts"] },
			"playwright": { "entry": ["**/*.@(spec|test|setup).?(c|m)[jt]s?(x)"] },
			"ignore": ["app/lib/dialog.tsx"],
			"entry": ["env.ts", "app/lib/urql.ts", "app/paraglide/**", "app/gql/**"],
			"ignoreDependencies": [
				"@iconify-json/material-symbols",
				"oxlint-config",
				"isbot",
				"@svgr/core",
				"@svgr/plugin-jsx"
			]
		},
		"packages/a": { "ignoreDependencies": ["oxlint-config"] },
		"packages/extra-outlet": { "ignoreDependencies": ["oxlint-config"] },
		"packages/m3-react": { "ignoreDependencies": ["oxlint-config", "m3-core"] },
		"packages/markdown": { "ignoreDependencies": ["oxlint-config"] },
		"packages/m3-core": { "ignoreDependencies": ["oxlint-config"] }
	}
}
